{
  "name": "almaha-foods-react",
  "version": "1.0.0",
  "description": "Al Maha Foods - React website converted from WordPress",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
  "postbuild": "cp -f public/.htaccess dist/.htaccess || true && mkdir -p dist/wp-content/uploads/2024/11 && cp -f public/wp-content/uploads/2024/11/Privacy-Policy-Al-maha.pdf dist/wp-content/uploads/2024/11/Privacy-Policy-Al-maha.pdf || true",
    "build:zip": "npm run build && (cp -f public/.htaccess dist/.htaccess || true) && cd dist && zip -r ../almaha-dist.zip .",
    "preview": "vite preview",
    "test:visual": "playwright test",
    "audit": "playwright test tests/audit.spec.js && node scripts/build-audit-report.js",
    "audit:liveOnly": "playwright test tests/audit.spec.js && node scripts/build-audit-report.js",
    "caps:local": "node scripts/capture-local-screenshots.js",
    "caps:live": "node scripts/capture-live-screenshots.js",
    "caps:compare": "node scripts/compare-with-live-caps.js",
    "caps:compare:png": "node scripts/compare-local-vs-live.js",
    "caps:hotspots": "node scripts/analyze-diff-hotspots.js",
    "copy:compare": "node scripts/compare-copy.js"
  },
  "dependencies": {
    "@amcharts/amcharts4": "^4.10.39",
    "@amcharts/amcharts4-geodata": "^4.1.27",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intersection-observer": "^9.13.0",
    "react-router-dom": "^6.22.0",
    "swiper": "^11.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@vitejs/plugin-react": "^4.2.1",
    "jpeg-js": "^0.4.4",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.56.1",
    "pngjs": "^7.0.0",
    "vite": "^5.1.0"
  }
}
